<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0.8dp" />
            <solid android:color="#9D0A00" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="-2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0.8dp" />
            <stroke
                android:width="1dp"
                android:color="#EA5348" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>